<div class='container mt-4'>
  <h1 class='text-center'>Welcome, {{username}}!</h2>
  <div>
    <h2>Create a New Post:</h2>
    <form class='form edit-delete-form'>
      <label for='postTitle' class='post-label mt-4'>Post Title:</label>
      <input
        type='text'
        class='form-control'
        name='postTitle'
        id='postTitle'
        placeholder='Title of post'
      />
      <label for='postContent' class='post-label mt-4'>Content Body:</label>
      <textarea
        name='postContent'
        id='postContent'
        class='form-control'
        cols='30'
        rows='10'
      ></textarea>
      <button type='submit' class='btn btn-primary m-3 mx-auto'>Create New Post</button>
    </form>
  </div>

  <h3 class='my-4'>Your Current Posts:</h3>
    <div class="all-posts">
      {{#each posts as |post|}}
      <div class='card card-border overflow-hidden inline mb-4'>
        <div class='card-head p-2 pl-3 d-flex justify-content-between'>
          <h3 class='pt-1'>{{post.post_title}}</h3>
        </div>
        <div class='card-body'>
          <p>{{post.post_content}}</p>
        </div>
        <div class='text-right p-2 card-footer'>
          <a href="/edit/{{post.id}}">
            <button class="btn-info p-2 mr-2" id="edit-btn">Edit</button>
          </a>          
          <button class="btn-danger p-2" data-id='{{post.id}}' id="delete-btn">Delete</button>
        </div>
      </div>
      {{/each}}
    </div>
</div>

<script src='js/post.js'></script>